<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:id="@+id/layoutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/message_container_me">


        <TextView
            android:id="@+id/tvInfoMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:text="August 15 at 10:06 AM"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tvMessageMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvInfoMe"
            android:layout_toLeftOf="@+id/ivProfilePic"
            android:layout_margin="8dp"
            android:maxWidth="240dp"
            android:textColor="@android:color/black" />


        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvInfoMe" />


    </RelativeLayout>

</RelativeLayout>