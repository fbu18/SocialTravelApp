<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tvAttrName"
        android:layout_width="282dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivAttrPic"
        android:text="Attraction Name"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/ivAttrPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        app:srcCompat="@android:color/black" />

    <RatingBar
        android:id="@+id/rbVoteAverage"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_below="@+id/tvAttrName"
        android:numStars="5"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvAttrName"
        android:layout_marginTop="56dp"
        android:text="Attraction caption here"
        android:textColor="@color/colorPrimaryDark" />


</RelativeLayout>


