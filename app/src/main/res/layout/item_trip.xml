<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:id="@+id/relativeLayout">

    <ImageView
        android:id="@+id/ivAttractionPic"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@color/placeholderColor" />

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivAttractionPic"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/grey_9_10_transparent"
            android:backgroundTintMode="add"
            android:text="TextView"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="2.6"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/black_70_transparent"
            android:backgroundTintMode="add"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="2.6"
            android:textStyle="bold" />
</RelativeLayout>