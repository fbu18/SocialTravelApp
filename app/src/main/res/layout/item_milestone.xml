<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_white"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivAwardPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="10dp"
        app:srcCompat="@drawable/user_outline_24" />

    <TextView
        android:id="@+id/tvAwardUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/ivAwardPic"
        android:layout_marginLeft="5dp"
        android:text="Username"
        android:textColor="@color/black_70_transparent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAwardDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvCommentsMilestone"
        android:layout_marginLeft="10dp"
        android:text="Date" />

    <com.like.LikeButton
        android:id="@+id/star_button3"
        android:layout_width="@dimen/like_width"
        android:layout_height="@dimen/like_height"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivAwardPic"
        android:layout_marginTop="130dp"
        app:anim_scale_factor=".5"
        app:icon_size="@dimen/like_icon_size"
        app:icon_type="heart">

    </com.like.LikeButton>

    <ImageButton
        android:id="@+id/ibCommentMilestone"
        android:layout_width="@dimen/comment_width"
        android:layout_height="@dimen/comment_width"
        android:layout_toEndOf="@+id/star_button3"
        android:layout_alignTop="@id/star_button3"
        android:tint="@color/grey_5"
        android:background="@drawable/ic_comment" />


    <ListView
        android:id="@+id/lvCommentsMilestone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/star_button3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/star_button3"
        android:layout_alignStart="@+id/ivAwardPic"
        android:layout_marginBottom="-130dp"
        android:text="Unlocked a new trophy"
        android:textAlignment="center"
        android:textStyle="bold" />

</RelativeLayout>