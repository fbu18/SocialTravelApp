<!--<?xml version="1.0" encoding="utf-8"?>
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="245dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivProfilePic"
        android:text="tvUserName"
        android:textAlignment="center"
        android:textColor="@color/black_70_transparent"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="211dp"
        android:layout_height="38dp"
        android:layout_alignBaseline="@+id/btnEditProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/blue_5"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="139dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/user_outline_24" />

    <TextView
        android:id="@+id/btnEditProfile"
        android:layout_width="143dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfilePic"
        android:layout_gravity="center"
        android:background="@color/white"
        android:text="Edit Profile"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black_60_transparent" />

    <View
        android:id="@+id/profile_divider"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvBio"
        android:background="@drawable/background_gradient" />

    <TextView
        android:id="@+id/tvHomeLoc"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvUserName"
        android:text="tvHomeLoc"
        android:textAlignment="center"
        android:textColor="@color/black_50_transparent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pointsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHomeLoc"
        android:layout_marginHorizontal="@dimen/pointsMargin"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:text="Points:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pointsText"
        android:layout_below="@+id/pointsText"
        android:layout_marginTop="@dimen/pointsMargin"
        android:text="0"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/pastTripsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHomeLoc"
        android:layout_marginHorizontal="@dimen/pointsMargin"
        android:layout_toEndOf="@+id/pointsText"
        android:text="Past: "
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNumPastTrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pastTripsText"
        android:layout_below="@+id/pointsText"
        android:layout_marginTop="@dimen/pointsMargin"
        android:text="0"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/upcomingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHomeLoc"
        android:layout_marginHorizontal="@dimen/pointsMargin"
        android:layout_toEndOf="@+id/pastTripsText"
        android:text="Future:"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUpcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/upcomingText"
        android:layout_below="@+id/pointsText"
        android:layout_marginTop="@dimen/pointsMargin"
        android:text="0"
        android:textSize="22sp" />

    <fragment
        android:id="@+id/fragment"
        android:name="me.vivh.socialtravelapp.LeaderboardFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/profile_divider" />

    <TextView
        android:id="@+id/tvBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnEditProfile"
        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="@color/black_70_transparent" />


</RelativeLayout>
