<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/ivAttractionPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_card_travel_black_24dp" />

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivAttractionPic"
        android:layout_toRightOf="@+id/ivAttractionPic"
        android:layout_weight="1"
        android:ellipsize="none"
        android:maxLines="100"
        android:scrollHorizontally="false"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:lineSpacingMultiplier="0.8"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvChatText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/ivAttractionPic"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tvGroupName"
        android:layout_toEndOf="@+id/ivAttractionPic"
        android:layout_toRightOf="@+id/ivAttractionPic"
        android:text="Chat with fellow explorers"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/profile_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@color/grey_5_30_transparent" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:text="1 hr ago"
        android:textColor="@color/grey_8" />
</RelativeLayout>
